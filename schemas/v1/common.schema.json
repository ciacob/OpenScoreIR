{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://ciacob.github.io/OpenScoreIR/schemas/v1/common.schema.json",
    "$defs": {
        "ScoreInfo": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "composer": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "Uuid": {
            "type": "string",
            "format": "uuid"
        },
        "FractionString": {
            "type": "string",
            "pattern": "^-?\\d+\\/([1-9]\\d*)$"
        },
        "Fraction": {
            "oneOf": [
                {
                    "$ref": "#/$defs/FractionString"
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "integer",
                            "minimum": 1
                        }
                    ],
                    "minItems": 2,
                    "maxItems": 2
                },
                {
                    "type": "object",
                    "properties": {
                        "num": {
                            "type": "integer"
                        },
                        "den": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "required": [
                        "num",
                        "den"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "HostKind": {
            "type": "string",
            "enum": [
                "measures",
                "events",
                "pitches"
            ]
        },
        "HostTypes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "enum": {
                    "$ref": "#/$defs/HostKind"
                }
            }
        },
        "HostFilter": {
            "type": "object",
            "properties": {
                "baseType": {
                    "type": "string",
                    "enum": [
                        "measures",
                        "events",
                        "pitches"
                    ]
                },
                "filter": {
                    "type": "object",
                    "properties": {
                        "kind": {
                            "type": "string",
                            "enum": [
                                "comparison",
                                "function"
                            ],
                            "default": "comparison"
                        },
                        "source": {
                            "type": "string"
                        },
                        "operator": {
                            "type": "string",
                            "enum": [
                                "is",
                                "isNot",
                                "startsWith",
                                "endsWith",
                                "includes",
                                "doesNotInclude",
                                "greaterThan",
                                "lessThan"
                            ]
                        },
                        "value": {
                            "oneOf": [
                                "string",
                                "number",
                                "boolean"
                            ]
                        }
                    },
                    "required": [
                        "source",
                        "operator",
                        "value"
                    ]
                }
            }
        },
        "ParamValueTypes": {
            "type": "string",
            "enum": [
                "string",
                "int",
                "number",
                "bool"
            ]
        },
        "ParamValue": {
            "oneOf": [
                {
                    "$ref": "#/$defs/ParamValueTypes"
                },
                {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "value": {
                            "$ref": "#/$defs/ParamValueTypes"
                        },
                        "default": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ]
                }
            ]
        },
        "AttachmentParameter": {
            "oneOf": [
                {
                    "$ref": "#/$defs/ParamValueTypes"
                },
                {
                    "type": "object",
                    "properties": {
                        "kind": {
                            "type": "string",
                            "enum": [
                                "enum",
                                "string",
                                "int",
                                "number",
                                "bool"
                            ]
                        },
                        "values": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/ParamValue"
                            },
                            "minItems": 1
                        }
                    },
                    "required": [
                        "kind"
                    ],
                    "allOf": {
                        "if": {
                            "properties": {
                                "kind": {
                                    "const": "enum"
                                }
                            }
                        },
                        "then": {
                            "required": [
                                "values"
                            ]
                        },
                        "else": {
                            "not": {
                                "required": [
                                    "values"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "AttachmentDefinition": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "hosts": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/HostTypes"
                        },
                        {
                            "$ref": "#/$defs/HostFilter"
                        }
                    ]
                },
                "params": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/AttachmentParameter"
                    }
                },
                "required": [
                    "name",
                    "hosts"
                ]
            }
        },
        "AttachmentInstance": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/$defs/Uuid"
                },
                "params": {
                    "type": "object",
                    "minProperties": 1
                }
            },
            "required": ["id"]
        }
    }
}