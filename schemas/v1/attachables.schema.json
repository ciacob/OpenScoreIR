{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://ciacob.github.io/OpenScoreIR/schemas/v1/attachables.schema.json",
    "$comment": "Serves for both attachments and MIDI modules, which are formally identical.",
    "definitions": {
        "HostKind": {
            "type": "string",
            "enum": [
                "measures",
                "events",
                "pitches"
            ]
        },
        "HostTypes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/HostKind"
            }
        },
        "HostFilter": {
            "type": "object",
            "required": [
                "baseType"
            ],
            "additionalProperties": false,
            "properties": {
                "baseType": {
                    "$ref": "#/definitions/HostKind"
                },
                "filter": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "type": "string",
                            "enum": [
                                "comparison",
                                "function"
                            ],
                            "default": "comparison"
                        },
                        "source": {
                            "type": "string"
                        },
                        "operator": {
                            "type": "string",
                            "enum": [
                                "is",
                                "isNot",
                                "startsWith",
                                "endsWith",
                                "includes",
                                "doesNotInclude",
                                "greaterThan",
                                "lessThan"
                            ]
                        },
                        "value": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "number"
                                },
                                {
                                    "type": "boolean"
                                }
                            ]
                        }
                    },
                    "required": [
                        "source",
                        "operator",
                        "value"
                    ]
                }
            }
        },
        "ParamValueTypes": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "integer"
                },
                {
                    "type": "number"
                },
                {
                    "type": "boolean"
                }
            ]
        },
        "ParamValue": {
            "$comment": "This validates the entities that populate the `values` Array of each parameter entity.",
            "oneOf": [
                {
                    "$ref": "#/definitions/ParamValueTypes"
                },
                {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "value": {
                            "$ref": "#/definitions/ParamValueTypes"
                        },
                        "default": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "label",
                        "value"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "AttachableParameter": {
            "$comment": "This validates the entity that goes right beneath `params`, e.g., the `duration` parameter for the `fermata` attachment.",
            "oneOf": [
                {
                    "$comment": "Parameters can simply be strings, booleans, etc., without further inner structure.",
                    "type": "string",
                    "enum": [
                        "enum",
                        "string",
                        "int",
                        "number",
                        "bool"
                    ]
                },
                {
                    "$comment": "Or, they can be Objects with `kind` and `values` properties. Observe that `kind` uses `int`, not `integer`.",
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "kind": {
                                    "const": "enum"
                                },
                                "values": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/ParamValue"
                                    },
                                    "minItems": 1
                                }
                            },
                            "required": [
                                "kind",
                                "values"
                            ],
                            "additionalProperties": false
                        },
                        {
                            "type": "object",
                            "properties": {
                                "kind": {
                                    "type": "string",
                                    "enum": [
                                        "string",
                                        "int",
                                        "number",
                                        "bool"
                                    ]
                                }
                            },
                            "required": [
                                "kind"
                            ],
                            "additionalProperties": false
                        }
                    ]
                }
            ]
        },
        "AttachableDefinition": {
            "$comment": "This validates a attachable entity (e.g., an Object placed under `$definitions/attachments`).",
            "type": "object",
            "required": [
                "name",
                "hosts"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "hosts": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/HostTypes"
                        },
                        {
                            "$ref": "#/definitions/HostFilter"
                        }
                    ]
                },
                "params": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/AttachableParameter"
                    }
                }
            }
        },
        "AttachableDefinitions": {
            "type": "object",
            "propertyNames": {
                "$ref": "./common.schema.json#/definitions/Uuid"
            },
            "additionalProperties": {
                "$ref": "#/definitions/AttachableDefinition"
            }
        },
        "AttachableInstance": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "./common.schema.json#/definitions/Uuid"
                },
                "params": {
                    "type": "object",
                    "minProperties": 1,
                    "additionalProperties": true
                }
            },
            "required": [
                "id"
            ]
        },
        "AttachableInstances": {
            "type": "object",
            "propertyNames": {
                "pattern": "^(0|[0-9]|[1-9][0-9])$"
            },
            "additionalProperties": {
                "oneOf": [
                    {
                        "$ref": "./common.schema.json#/definitions/Uuid"
                    },
                    {
                        "type": "array",
                        "items": {
                            "$ref": "./common.schema.json#/definitions/Uuid"
                        },
                        "minItems": 1
                    },
                    {
                        "$ref": "#/definitions/AttachableInstance"
                    },
                    {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/AttachableInstance"
                        },
                        "minItems": 1
                    }
                ]
            }
        }
    }
}